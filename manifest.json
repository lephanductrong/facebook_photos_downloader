{
    "manifest_version": 3,
    "name": "FB Photo Downloader",
    "version": "1.0",
    "description": "Auto-scroll and download photos from a Facebook page.",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads",
        "storage"
    ],
    "host_permissions": [
        "*://*.facebook.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": ["inject.js"],
            "matches": ["*://*.facebook.com/*"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}